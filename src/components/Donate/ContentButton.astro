---
import Wrapper from "../shared/Wrapper.astro";
import Headline from "../shared/Headline.astro";
import "./contentButton.scss";
import Button from "../shared/Button.astro";
---

<div class="content-button">
  <Wrapper>
    <div class="content-button-titles">
      <Headline ele="h2" hlstyle="one">
        {Astro.props.data.title}
      </Headline>
      <Headline ele="h3" hlstyle="three">
        {Astro.props.data.subTitle}
      </Headline>
    </div>
    <div class="content-button-content">
      <div set:html={Astro.props.data.content} />
    </div>
    <div class="content-button-link">
      <Button href={Astro.props.data.buttonLink}
        >{Astro.props.data.buttonText}</Button
      >
    </div>
  </Wrapper>
</div>

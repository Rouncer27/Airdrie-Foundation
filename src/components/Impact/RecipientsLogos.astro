---
import { Image } from "astro:assets";
import Wrapper from "../shared/Wrapper.astro";
import "./recipientsLogos.scss";
import Headline from "../shared/Headline.astro";
---

<div class="impact-grantlogos">
  <Wrapper>
    <div class="impact-grantlogos-title">
      <Headline ele="h2" hlstyle="one">Grant Recipients</Headline>
    </div>
    <div class="impact-grantlogos-logos">
      {
        Astro.props.data.logos.map((item) => {
          return (
            <div class="impact-grantlogos-logos-logo">
              {item.logoUrl ? (
                <a href={item.logoUrl}>
                  <Image
                    src={item.logo.sourceUrl}
                    alt={item.logo.altText}
                    inferSize={true}
                  />
                </a>
              ) : (
                <Image
                  src={item.logo.sourceUrl}
                  alt={item.logo.altText}
                  inferSize={true}
                />
              )}
            </div>
          );
        })
      }
    </div>
  </Wrapper>
</div>

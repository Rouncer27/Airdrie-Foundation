---
import Headline from "../shared/Headline.astro";
import Wrapper from "../shared/Wrapper.astro";
import Button from "../shared/Button.astro";
import "./linksBanner.scss";
---

<div class="grants-links-banner">
  <Wrapper>
    <div class="grants-links-banner-title">
      <Headline ele="h2" hlstyle="one">{Astro.props.data.title}</Headline>
    </div>
    <div class="grants-links-banner-links">
      <Button
        target="_blank"
        rel="noopener"
        href={Astro.props.data.buttonOneFile.mediaItemUrl}
        >{Astro.props.data.buttonOneText}</Button
      >
      <Button
        target="_blank"
        rel="noopener"
        href={Astro.props.data.buttonTwoFile.mediaItemUrl}
        >{Astro.props.data.buttonTwoText}</Button
      >
    </div>
  </Wrapper>
</div>

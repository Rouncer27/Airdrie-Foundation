---
import Headline from "../shared/Headline.astro";
import Wrapper from "../shared/Wrapper.astro";
import Button from "../shared/Button.astro";
import "./callToAction.scss";
import { Image } from "astro:assets";
---

<div class="grants-cta">
  <Wrapper>
    <div class="grants-cta-content">
      <div class="grants-cta-content-title">
        <Headline ele="h2" hlstyle="one">{Astro.props.data.title}</Headline>
      </div>
      <div
        class="grants-cta-content-para"
        set:html={Astro.props.data.content}
      />
      <div class="grants-cta-content-link">
        <Button btnstyle="two" href={Astro.props.data.buttonFile.mediaItemUrl}>
          {Astro.props.data.buttonText}
        </Button>
      </div>
    </div>
  </Wrapper>
  <div class="grants-cta-bg">
    <Image
      src={Astro.props.data.backgroundImage.sourceUrl}
      alt={Astro.props.data.backgroundImage.altText}
      inferSize={true}
    />
  </div>

  <div class="grants-cta-overlay"></div>
</div>

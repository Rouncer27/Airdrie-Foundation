---
import Headline from "../shared/Headline.astro";
import Wrapper from "../shared/Wrapper.astro";
import "./newsletter.scss";
---

<div class="newsletter-sign">
  <Wrapper>
    <div class="newsletter-sign-content">
      <div class="newsletter-sign-content-inner">
        <div>
          <Headline ele="h2" hlstyle="one">{Astro.props.data.title}</Headline>
          <Headline ele="h3" hlstyle="three"
            >{Astro.props.data.subTitles}</Headline
          >
        </div>
        <div set:html={Astro.props.data.content} />
      </div>
    </div>
    <div class="newsletter-sign-form">
      <form>
        <p>Newsletter Signup here! Coming soon!</p>
      </form>
    </div>
  </Wrapper>
</div>

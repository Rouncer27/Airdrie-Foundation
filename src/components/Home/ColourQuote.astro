---
import Wrapper from "../shared/Wrapper.astro";
import "./colourQuote.scss";
---

<div class="colour-quote">
  <Wrapper>
    <div class="colour-quote-content">
      <div
        class="colour-quote-content-para"
        set:html={Astro.props.data.quote}
      />
      <div class="colour-quote-content-author">
        <p>&#8211; {Astro.props.data.quoteAuthor}</p>
      </div>
    </div>
  </Wrapper>
</div>

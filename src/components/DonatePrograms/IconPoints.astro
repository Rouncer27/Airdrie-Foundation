---
import { Image } from "astro:assets";
import Wrapper from "../shared/Wrapper.astro";
import Headline from "../shared/Headline.astro";
import "./iconPoints.scss";
---

<div class="donatepro-icons">
  <Wrapper>
    {
      Astro.props.data.points.map((point) => {
        return (
          <div class="donatepro-icons-point">
            <div class="donatepro-icons-point-icon">
              <div class="donatepro-icons-point-icon-inner">
                <Image
                  src={point.icon.sourceUrl}
                  alt={point.icon.altText}
                  inferSize={true}
                />
              </div>
            </div>

            <div class="donatepro-icons-point-title">
              <Headline ele="h2" hlstyle="three">
                {point.title}
              </Headline>
            </div>

            <div
              class="donatepro-icons-point-content"
              set:html={point.content}
            />
          </div>
        );
      })
    }
  </Wrapper>
</div>

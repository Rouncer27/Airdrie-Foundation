---
import HeroSlider from "../components/Home/HeroSlider";
import Layout from "../layouts/Layout.astro";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
			query homePageQuery {
				page(id: "/", idType: URI) {
					homePage {

						# START Hero section #
						homeHeroSliderComponent {
							slides {
                  content
                  linkText
                  image {
                  altText
                  sourceUrl
							  }
              }
						}

						# START Hero section #

						# START Hero section #

						# START Hero section #

						# START Hero section #

						# START Hero section #
					
						# START Hero section #
					
						# START Hero section #
					}
				}
			}
		`,
  }),
});

const {
  data: { page },
} = await response.json();

// console.log("page", page.homePage);
---

<Layout title="Welcome to Astro.">
  <HeroSlider
    client:only="react"
    data={page.homePage.homeHeroSliderComponent}
  />
</Layout>

---
import Layout from "../layouts/Layout.astro";
import HeroIntro from "../components/Contact/HeroIntro.astro";
import MailingContactInfo from "../components/Contact/MailingContactInfo.astro";
import ContactForm from "../components/Contact/ContactForm.jsx";
import CallToAction from "../components/Contact/CallToAction.astro";
import Newsletter from "../components/Home/Newsletter";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
	query contactPageQuery {
        page(id: "/contact", idType: URI) {
          contactPage {

            # START Hero section #

            heroIntroComponent {
                content
                title
                image {
                altText
                sourceUrl
                }
            }

            # START Hero section #

            mailingContactInfoComponent {
              mailingInformation
              eTransfersInformation
              contactUs
              taxReceipts
            }

         
            # START Hero section #

            contactFormComponent {
              title
              content
            }

       
            # START Hero section #

        

            # START Hero section #

            callToActionComponent {
              title
              content
              buttonText
              buttonFile {
                mediaItemUrl
              }
              backgroundImage {
                altText
                sourceUrl
              }
            }

          
            # START Hero section #


            newsletterComponent {
              title
              subTitles
              content
            }

            # START Hero section #

            # START Hero section #

                     }
                }			
			}
		`,
  }),
});

const {
  data: { page },
} = await response.json();
---

<Layout title="Welcome to Astro.">
  <HeroIntro data={page.contactPage.heroIntroComponent} />
  <MailingContactInfo data={page.contactPage.mailingContactInfoComponent} />
  <ContactForm
    client:only="react"
    data={page.contactPage.contactFormComponent}
  />
  <CallToAction data={page.contactPage.callToActionComponent} />
  <Newsletter client:only="react" data={page.contactPage.newsletterComponent} />
</Layout>

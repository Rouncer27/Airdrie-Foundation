---
import Layout from "../layouts/Layout.astro";
import HeroIntro from "../components/About/HeroIntro.astro";
import SimpleContent from "../components/About/SimpleContent.astro";
import WhatWeDo from "../components/About/WhatWeDo.astro";
import BoardOfDirectors from "../components/About/BoardOfDirectors.astro";
import AnnualReports from "../components/About/AnnualReports.astro";
import Newsletter from "../components/Home/Newsletter";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
	query aboutPageQuery {
        page(id: "/about", idType: URI) {
          aboutPage {

            # START Hero section #

            heroIntroComponent {
                content
                title
                image {
                altText
                sourceUrl
                }
            }

            # START Hero section #

            simpleContentComponent {
              title
              subTitle
              content
            }

            # START Hero section #

            whatWeDoComponent {
              title
              content
              featuredImage {
                altText
                sourceUrl
              }
            }

            # START Hero section #

            boardOfDirectorsComponent {
              directors {
                name
                title
                bio
                image {
                  altText
                  sourceUrl
                }
              }
            }

            # START Hero section #

            annualReportsComponent {
              reports {
                reportImage {
                  altText
                  sourceUrl
                }
                reportPdf {
                  altText
                  mediaItemUrl
                }
              }
            }

            # START Hero section #


            newsletterComponent {
              title
              subTitles
              content
            }

            # START Hero section #

            # START Hero section #

                     }
                }			
			}
		`,
  }),
});

const {
  data: { page },
} = await response.json();
---

<Layout title="Welcome to Astro.">
  <HeroIntro data={page.aboutPage.heroIntroComponent} />
  <SimpleContent data={page.aboutPage.simpleContentComponent} />
  <WhatWeDo data={page.aboutPage.whatWeDoComponent} />
  <BoardOfDirectors data={page.aboutPage.boardOfDirectorsComponent} />
  <AnnualReports data={page.aboutPage.annualReportsComponent} />
  <Newsletter client:only="react" data={page.aboutPage.newsletterComponent} />
</Layout>

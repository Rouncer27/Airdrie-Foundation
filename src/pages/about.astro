---
import Layout from "../layouts/Layout.astro";
import HeroIntro from "../components/About/HeroIntro.astro";
import SimpleContent from "../components/About/SimpleContent.astro";

const response = await fetch(`${import.meta.env.WPGRAPHQL_URL}`, {
  method: "POST",
  headers: {
    "content-type": "application/json",
  },
  body: JSON.stringify({
    query: `
	query aboutPageQuery {
        page(id: "/about", idType: URI) {
          aboutPage {

            # START Hero section #

            heroIntroComponent {
                content
                title
                image {
                altText
                sourceUrl
                }
            }

            # START Hero section #

            simpleContentComponent {
              title
              subTitle
              content
            }

            # START Hero section #

            # START Hero section #

            # START Hero section #

            # START Hero section #

            # START Hero section #

            # START Hero section #

                     }
                }			
			}
		`,
  }),
});

const {
  data: { page },
} = await response.json();
---

<Layout title="Welcome to Astro.">
  <HeroIntro data={page.aboutPage.heroIntroComponent} />
  <SimpleContent data={page.aboutPage.simpleContentComponent} />
</Layout>
